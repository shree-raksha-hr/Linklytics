    include ../partials/header.pug
    
    main.container.py-4.flex-grow-1
      block content
    
    include ../partials/footer.pug
    
    script(src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.2.3/js/bootstrap.bundle.min.js")
    block scripts